{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"taskName": "build main",
			"type": "shell",
			"command": "g++",
			"args": [
				"-O2",
				"-D",
				"DEBUG",
				"-g",
				"-o",
				"main",
				"main.cpp",
				"-I",
				"C:/SFML-2.4.2/include",
				"-I",
				"./include/",
				"./src/*.cpp",
				"-lsfml-system-d",
				"-lsfml-window-d",
				"-lsfml-graphics-d"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"taskName": "build release",
			"type": "shell",
			"command": "g++",
			"args": [
				"-O3",
				"-o",
				"game",
				"main.cpp",
				"-I",
				"C:/SFML-2.4.2/include",
				"-I",
				"./include/",
				"./src/*.cpp",
				"-lsfml-system",
				"-lsfml-window",
				"-lsfml-graphics"
			],
			"problemMatcher": []
		}
	]
}